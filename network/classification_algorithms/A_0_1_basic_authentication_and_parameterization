# A_0_1 Basic authentication and parameterization
# Import and authenticate Google Cloud service libraries
country = 'bolivia'
ee_project = f'mapbiomas-{country}'  # Defina o nome do projeto corretamente
bucket_name = 'mapbiomas-fire'

def authenticates (eeProject,bucketName):
  import ee
  ee.Authenticate()
  ee.Initialize(project=eeProject)

  # Authentication with Google Cloud (required in Colab
  from google.colab import auth
  auth.authenticate_user()

  # Initialize the Google Cloud Storage client and set the bucket name
  from google.cloud import storage
  client = storage.Client()
  bucket = client.get_bucket(bucketName)

authenticates(ee_project,bucket_name)

# Root directory for Python scripts for burned area classification
algorithms = f'/content/brazil-fire/network/classification_algorithms'
